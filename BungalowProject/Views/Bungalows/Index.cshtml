@model IEnumerable<BungalowProject.Data.Bungalow>

@{
    ViewData["Title"] = "Bungalows";
}

<h1>Bungalows</h1>

<p>
    <a asp-action="Create">Add new bungalow</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            Bungalow's ID    
            </th>
            <th>
                Capacity
            </th>
            <th>
                For Smokers
            </th>
            <th>
                IsAvalibe?
            </th>
            <th>
                For pets
            </th>
            <th>
                Location
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSmokingAllowed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvalive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowsPets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
